<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context="com.example.cheskadelarosa.aceyourinterview.FieldOfStudyActivity">

    <TextView
        android:id="@+id/tv_chooseField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORUM"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/p1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_chooseField"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/person1"/>

    <TextView
        android:id="@+id/person1pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_chooseField"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/p1"
        android:text="Patrick Ian Co"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_person1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person1pic"
        android:layout_toRightOf="@+id/p1"
        android:text="I love this app! I practiced using this and I think I Aced my interview for my internship!!!
"
        android:layout_centerInParent="true"/>


</RelativeLayout>
